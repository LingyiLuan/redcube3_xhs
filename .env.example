# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres

# Service Databases
DB_USERS=redcube_users
DB_INTERVIEWS=redcube_interviews
DB_CONTENT=redcube_content
DB_NOTIFICATIONS=redcube_notifications

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Environment
NODE_ENV=development

# Service Ports
USER_SERVICE_PORT=3001
INTERVIEW_SERVICE_PORT=3002
CONTENT_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004

# API Gateway
API_GATEWAY_PORT=8080

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# AI Configuration for XHS content analysis
DEEPSEEK_API_KEY=your-deepseek-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Content Analysis Settings
MAX_ANALYSIS_TEXT_LENGTH=10000
ANALYSIS_TIMEOUT_MS=30000
BATCH_SIZE_LIMIT=20

# Phase 4: Autonomous Agent Configuration
ENABLE_SCHEDULER=true
APIFY_API_TOKEN=your-apify-api-token-here
APIFY_ACTOR_ID=your-actor-id-after-deployment

# Reddit OAuth2 Credentials (Required for Apify Actor)
# These should be configured in Apify Console > Actor > Settings > Environment Variables
REDDIT_CLIENT_ID=your-reddit-app-client-id
REDDIT_SECRET=your-reddit-app-secret
REDDIT_USER=your-reddit-username
REDDIT_PASS=your-reddit-password